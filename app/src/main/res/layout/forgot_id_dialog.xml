<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <EditText
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름을 입력해주세요."
            android:fontFamily="@font/nanum"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/forgot_id_edittext"
            android:layout_marginRight="100dp"
            />

        <Button
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/forgot_id_edittext"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="확인"
            android:fontFamily="@font/nanum"
            android:id="@+id/forgot_id_button"
            app:layout_constraintTop_toTopOf="parent"
            />




    <ListView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgot_id_edittext"
        android:id="@+id/forgot_id_listview"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>