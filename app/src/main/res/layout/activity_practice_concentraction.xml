<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.wotin.geniustest.viewModel.GeniusTestViewModel" />

    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.practice.PracticeConcentractionActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/practice_concentraction_game_layout"
            >

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/practice_concentraction_timer_progressbar"
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/progress_bar_background"
                android:maxHeight="100dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/practice_concentraction_score_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="50dp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="점수 : "
                    android:fontFamily="@font/mapo"
                    android:textColor="@android:color/black"
                    android:textSize="30dp"/>

                <TextView
                    tools:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{Integer.toString(viewModel.score)}"
                    android:fontFamily="@font/mapo"
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:id="@+id/practice_concentraction_score_textview"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/practice_concentraction_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/practice_concentraction_score_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20dp"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/practice_concentraction_result_layout">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/scoreboard"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"
                android:tint="#60ffffff"
                tools:ignore="UseAppTint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/practice_concentraction_result_confirm_button"
                android:layout_marginBottom="300dp"
                >

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="점수 :"
                    android:fontFamily="@font/mapo"
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1"
                    android:text="@{Integer.toString(viewModel.score)}"
                    android:textColor="@android:color/black"
                    android:textSize="70dp"
                    android:fontFamily="@font/mapo"
                    android:id="@+id/practice_concentraction_result_textview"/>


            </LinearLayout>

            <Button
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:id="@+id/practice_concentraction_result_confirm_button"
                android:text="확인"
                android:background="@drawable/rounded_corner_button"
                android:fontFamily="@font/mapo"
                android:textSize="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="100dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left_arrow"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/go_to_mainactivity_from_practice_concentraction_activity_imageview"/>


    </RelativeLayout>

</layout>
