<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:id="@+id/layout_drawer"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#CFCFCF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tabIndicatorColor="#2B2626"
                app:tabIndicatorHeight="2dp"
                app:tabTextAppearance="@style/tab_text"
                app:tabTextColor="@android:color/black"
                tools:layout_editor_absoluteX="0dp">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/practice_tab_item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:icon="@drawable/practice"
                    android:text="연습하기" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/genius_test_tab_item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:icon="@drawable/genius"
                    android:text="테스트" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/ranking_tab_item"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:icon="@drawable/ranking"
                    android:text="랭킹" />

            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tab_layout"
                android:id="@+id/fragment_view_pager"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/navigation_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/menu"
                android:tint="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                tools:ignore="UseAppTint" />



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/server_check_layout"
                android:background="#43000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <androidx.cardview.widget.CardView
                    android:layout_marginBottom="70dp"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:background="@android:color/white"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    >



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="서버 점검 시간입니다"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nanum"
                        android:textSize="25dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:id="@+id/server_check_from_time_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:00"
                            android:fontFamily="@font/mapo"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="~"
                            android:fontFamily="@font/mapo"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"/>


                        <TextView
                            android:id="@+id/server_check_to_time_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1:00"
                            android:fontFamily="@font/mapo"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>





            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.navigation.NavigationView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/navigation_view"
                android:layout_gravity="start"
                app:menu="@menu/navi_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>